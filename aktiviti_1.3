# Pemboleh ubah dan pemalar
pi = 3.142
jejari = float(input("Masukkan jejari(m): "))
tinggi = float(input("Masukkan tinggi(m): "))

# Proses
luas = (2 * pi * jejari * jejari) + (2 * pi * jejari * tinggi)
isi_padu = pi * jejari * jejari * tinggi

# Output
print("Jumlah luas permukaan tangki air ialah", round(luas,2))
print("Jumlah isi padu tangki air ialah", round(isi_padu,2))
